<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qardapp.qard"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="none" >
        <activity
            android:name="com.qardapp.qard.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qardapp.qard.NFC_activity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/com.qardapp.qard.nfc_activity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dm.zbar.android.scanner.ZBarScannerActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />

        <provider
            android:name="com.qardapp.qard.database.FriendsProvider"
            android:authorities="com.qardapp.qard.database"
            android:enabled="true"
            android:exported="false" >
        </provider>

        <activity
            android:name="com.qardapp.qard.FriendProfileActivity"
            android:label="@string/title_activity_friend_profile" >
        </activity>
        <activity
            android:name="com.qardapp.qard.comm.server.QardLoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.qardapp.qard.QRCodeDisplayActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <activity android:name="com.qardapp.qard.settings.FacebookLoginActivity"
                  android:label="@string/app_name" />               
        <activity android:name="com.qardapp.qard.settings.TwitterLoginActivity"
                  android:label="@string/app_name" />      
        <activity android:name="com.qardapp.qard.settings.OAuthActivity"
                  android:label="@string/app_name"
                  android:launchMode="singleInstance">
        </activity>              
        <activity android:name="com.qardapp.qard.settings.AuthActivity"
                  android:label="@string/app_name">
        </activity>     
        <activity android:name="com.qardapp.qard.settings.AddUserActivity"
                  android:label="@string/app_name">
        </activity>         
        <activity android:name="com.qardapp.qard.friends.profile.services.ServiceWebDisplayActivity"
                  android:label="@string/app_name">
        </activity>     
        <activity android:name="com.qardapp.qard.settings.SyncContactsActivity"
                  android:label="@string/app_name">
        </activity>      
        <activity android:name="com.qardapp.qard.settings.GooglePlusAuthActivity"
                  android:label="@string/app_name">
        </activity>                                
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS"></uses-permission>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"></uses-permission>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
</manifest>