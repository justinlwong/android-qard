<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/settings_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="Edit My Profile"
            android:textIsSelectable="false"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" >
        </View>

        <Button
            android:id="@+id/settings_account_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="Account"
            android:textIsSelectable="false"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" >
        </View>

        <Button
            android:id="@+id/settings_sync_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="Sync with Contact List"
            android:textIsSelectable="false"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" >
        </View>

        <Button
            android:id="@+id/settings_about_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="About"
            android:textIsSelectable="false"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" >
        </View>

        <Button
            android:id="@+id/settings_help_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="Help"
            android:textIsSelectable="false"
            android:textSize="22dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" >
        </View>

        <Button
            android:id="@+id/settings_notification_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="Notifications"
            android:textIsSelectable="false"
            android:textSize="22dp" />
    </LinearLayout>

</ScrollView>