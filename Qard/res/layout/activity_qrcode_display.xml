<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".QRCodeDisplayActivity" >
	<TextView
        android:id="@+id/nfc_help_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Touch Phones to Send" />
    <ImageView
        android:id="@+id/qrcode_image"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@id/nfc_help_msg"
        android:padding="10dp"
        android:src="@drawable/phone" />
    <Button
        android:id="@+id/profile_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qrcode_image"
        android:background="#FF222222"
        android:textColor="#FFDDDDDD"
        android:layout_marginBottom="1dp"
        android:text="Send" />
    <Button
        android:id="@+id/profile_send_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_send"
        android:background="#FF222222"
        android:textColor="#FFDDDDDD"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:text="Send via Text" />
    <Button
        android:id="@+id/profile_send_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_send_text"
        android:background="#FF222222"
        android:textColor="#FFDDDDDD"
        android:layout_marginTop="1dp"
        android:text="Share" />

</RelativeLayout>