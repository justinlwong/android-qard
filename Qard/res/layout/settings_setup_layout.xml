<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00ACED">
	<ImageView
        android:id="@+id/app_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/nexcircle_about" />
	
	<TextView
        android:id="@+id/app_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@id/app_icon"
        android:textSize="70sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="nexcircle" 
        android:paddingBottom="20dp" />
	<TextView
        android:id="@+id/setup_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_below="@id/app_name"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Nexcircle user profiles to be transfered can be setup now. Profiles can also be edited later in the setting page." 
        android:paddingBottom="40dp"/>
    <Button
        android:id="@+id/setup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_about"
        android:background="#0075B4"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="5dp"
        android:text="Take Me to Setup Now" />
    <Button
        android:id="@+id/skip_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_btn"
        android:background="#0075B4"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="1dp"
        android:text="Setup Later" />


</RelativeLayout>